page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .category_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category .category_container .category_menu {
  flex: 2;
}
.category .category_container .category_menu .menu {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category .category_container .category_menu .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.category .category_container .category_items {
  flex: 5;
}
.category .category_container .category_items .items_group .items_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .category_container .category_items .items_group .items_title .backslash {
  color: #ccc;
  padding: 0 10rpx;
}
.category .category_container .category_items .items_group .items_list {
  display: flex;
  flex-wrap: wrap;
}
.category .category_container .category_items .items_group .items_list navigator {
  width: 33.33%;
  text-align: center;
}
.category .category_container .category_items .items_group .items_list navigator image {
  width: 50%;
}
